extends layout

block content
	div.container
		nav.navbar.navbar-expand-lg.navbar-dark.fixed-top(style='background-color: #272d34;')
			a.navbar-brand(href='#') #{title}

			button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent')
				span.navbar-toggler-icon

			div#navbarSupportedContent.collapse.navbar-collapse.justify-content-between
				ul.navbar-nav
					li.nav-item
						a.nav-link(href='#') Inicio
					li.nav-item
						a.nav-link(href='#') Institucional
					li.nav-item.dropdown
						a#navbarDropdown.nav-link.dropdown-toggle(href='#',data-toggle='dropdown') Carreras
						div.dropdown-menu
							a.dropdown-item(href='#') Análisis Funcional de Sistemas Informáticos
							a.dropdown-item(href='#') Infraestructura de Tecnología de la Información
							a.dropdown-item(href='#') Desarrollo de Software
					li.nav-item
						a.nav-link(href='#') Ingresantes
					li.nav-item
						a.nav-link(href='#') Académica
					li.nav-item
						a.nav-link(href='#') Contacto

				form.form-inline.my-2.my-lg-0
					input.form-control.mr-sm-2(type='search', placeholder='Buscar', aria-label='Search')
					<button class="btn btn-outline-light my-2 my-sm-0" type="submit">Buscar</button>
		
		div#carouselExampleIndicators.carousel.slide(data-ride='carousel')
			ol.carousel-indicators
				li.active(data-target='#carouselExampleIndicators', data-slide-to='0')
				li(data-target='#carouselExampleIndicators', data-slide-to='1')
				li(data-target='#carouselExampleIndicators', data-slide-to='2')

			div.carousel-inner
				div.carousel-item.active
					img.d-block.w-100(src='../images/1.jpg', alt='First slide')
					div.carousel-caption.d-none.d-md-block
						h5 Slide1
						p text text text text

				div.carousel-item
					img.d-block.w-100(src='../images/2.jpg', alt='Second slide')
					div.carousel-caption.d-none.d-md-block
						h5 Slide2
						p text text text text

				div.carousel-item
					img.d-block.w-100(src='../images/3.jpg', alt='Third slide')
					div.carousel-caption.d-none.d-md-block
						h5 Slide3
						p text text text text

			a.carousel-control-prev(href='#carouselExampleIndicators', role='button', data-slide='prev')
				span.carousel-control-prev-icon(aria-hidden='true')
				span.sr-only Previous

			a.carousel-control-next(href='#carouselExampleIndicators', role='button', data-slide='next')
				span.carousel-control-next-icon(aria-hidden='true')
				span.sr-only Next

		div.row.mt-4
			div.col-sm-12.col-md-4
				div.card.mb-4
					div.card-body.text-center
						h5.card-title Titulo de novedades
						p.card-text Algun resumen del referido a las novedades
						a.card-link(href='#') Otro enlace
			div.col
				div.card
					div.card-body.text-center
						h5.card-title Titulo de novedades
						p.card-text Algun resumen del referido a las novedades
						a.card-link(href='#') Otro enlace
			div.col
				div.card
						div.card-body.text-center
							h5.card-title Titulo de novedades
							p.card-text Algun resumen del referido a las novedades
							a.card-link(href='#') Otro enlace
			

		div.row.mt-sm-4.mt-md-0
			div.col-sm-12.col-md-8.text-sm-center.text-md-left
				h3 Una importante cabecera
				p.lead Una sub-cabesera importante pueder ir aqui, lo cual es mas grande y gris
				p #{text1}
			div.col-sm-12.col-md-4
				h3.mb-4 Menu Secundario
				ul.nav.flex-column.nav-pills
					li.nav-item
						a.nav-link.active(href='#',style='background-color: #1a80df;') Activo
					li.nav-item
						a.nav-link(href='#') Enlace1
					li.nav-item
						a.nav-link(href='#') Enlace2
					li.nav-item
						a.nav-link.disabled(href='#') Desactivado

	section
		div.footer
			div.container
				div.row
					div.col-md-3
						h4 Suscribete a novedades
						form(action='./')
							div.input-group.mb-3
								input.form-control(type='text', placeholder='Email')
								div.input-group-append
									button.btn.btn-outline-secondary(type='button') Enviar
							p.p-footer-font Recibi nuestras actualizaciones directamente en tu correo electrónico.
						
					div.col-md-3
						h4 Alumnos
						ul.ul-footer
							li
								a.a-footer(href='#') Calendario académico
							li
								a.a-footer(href='#') Reglamentos
							li
								a.a-footer(href='#') Cursos
							li
								a.a-footer(href='#') Webs de asignaturas
							li
								a.a-footer(href='#') Tutoría

					div.col-md-3
						h4 Contacto
						p.p-footer-font
							strong Esc. Urquiza
						p.p-footer-font Direccion
						p.p-footer-font Telefonos

					div.col-md-3
						h4 Redes sociales

		div.copyright
			div.container
				div.row.justify-content-center
					ul.ul-copyright
						li.li-copy
							p(style='font-size: 0.9em;') Web designed for Urquiza school by Paulo and Iván
						li.li-copy
							a.a-copy(href='#') Privacidad
						li.li-copy
							a.a-copy(href='#') Terminos y condiciones