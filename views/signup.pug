doctype html
head
	title  Registro Urquiza 
	meta(name='viewport' content='width=device-width, initial-scale=1')
	meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
	meta(name='keywords' content='Registro, Registrarse, Registrarse en escuela Urquiza, Urquiza registro, escuela Urquiza')
	script.
		addEventListener("load", function () {
		setTimeout(hideURLbar, 0);
		}, false);
		function hideURLbar() {
		window.scrollTo(0, 1);
		}
	// Custom Theme files
	style
		include ../public/stylesheets/signIn-upStyle.css
	// Font-Awesome-Icons-CSS
	link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.3.1/css/all.css' integrity='sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU' crossorigin='anonymous')

	// web font
	link(href='//fonts.googleapis.com/css?family=Acme' rel='stylesheet')
	link(href='//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese' rel='stylesheet')
	link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css', integrity='sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB', crossorigin='anonymous')
// main
.main-agileits
	.navbar.bg-dark.sticky-top
		.navbar-header.pull-left
			a.fa.fa-angle-left.navbar-brand(href='#')
			a.navbar-link(href='/') Volver al inicio 
		.navbar-header.pull-right
			a.btn.navbar-btn.rounded-0(href='/login') Ingresar
	

	center
		img.img-responsive(src='../images/Urquiza Icon.png' alt='')
		.row.justify-content-center
				if hasErrors
					.alert.alert-danger
						each error in messages
							p= error

	.register-form
		form(action='/signup' method='POST')
			.fields-grid
				.styled-input-2
					label.header Cree su cuenta para la pre-inscripción
					.styled-input
						span.fa.fa-user(aria-hidden='true')
						input(type='text' placeholder='Ingrese sus nombres y apellidos' title='Ingrese su nombre completo' name='name' required='')
					.styled-input
						span.fa.fa-user(aria-hidden='true')
						input(type='number' placeholder='Ingrese su DNI' title='Ingrese su DNI' name='dni' min='6000' required='')
					.styled-input
						span.fa.fa-calendar(aria-hidden='true')
						input(placeholder='Día de nacimiento' name='birth' type='date' value='' onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'dd/mm/aaaa';}" required='' title='Ingrese su fecha de nacimiento')
					.styled-input.agile-styled-input-top
						span.fa.fa-venus(aria-hidden='true')
						select.category2(required='' name='gender')
							option(value='') Genero
							option(value='Femenino') Femenino
							option(value='Masculino') Masculino
							option(value='Otro') Otro
					.styled-input
						span.fa.fa-envelope(aria-hidden='true')
						input(type='email' placeholder='Correo electrónico' title='Ingrese su correo electrónico' name='email' required='')
					.styled-input
						span.fa.fa-phone(aria-hidden='true')
						input(type='text' placeholder='Numero de teléfono' title='Ingrese su numero de teléfono o numero de celular' name='phone_number' required='')
					.styled-input.agile-styled-input-top
						span.fa.fa-book(aria-hidden='true')
						select.category2(required='' name='careers')
							option(value='') Seleccione carrera
							option(value=' Tec. Superior en Desarrollo de Software') Tec. Superior en Desarrollo de Software
							option(value='Tec. Superior en Análisis Funcional de Sistemas Informáticos') Tec. Superior en Análisis Funcional de Sistemas Informáticos
							option(value='Tec. Superior en Infraestructura de Tecnología de la Información') Tec. Superior en Infraestructura de Tecnología de la Información
					.styled-input-2
						label.header Dirección
						.styled-input
							input(type='text' name='address' placeholder='Domicilio' title='ingrese su domicilio' required='')
						.styled-input
							input(type='text' name='city' placeholder='Ciudad' title='Ingrese la ciudad en donde vive' required='')
						.styled-input
							input(type='text' name='zip_code' placeholder='Código postal' title='Ingrese el código postal' required='')
					.clear
			input(type='hidden' name='_csrf' value=csrfToken)
			input(type='submit' value='Registrarse')
